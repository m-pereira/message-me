<h2 class="ui center aligned icon header">
  <i class="circular coffee blue inverted icon"></i>
  Message Me
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
        <div class="content">
          <div class="ui feed">
            <% @messages.each do |msg| %>
              <div class="event">
                <div class="content">
                  <div class="summary">
                    <em><%= msg.user.username %></em>: <%= msg.body %>.
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Enter a message...">
              <i class="bordered blue edit icon"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <% @users.each do |user| %>
            <%= link_to user.username, '#', 
              class: "item #{'active blue' if user == current_user}" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

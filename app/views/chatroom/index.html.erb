<h2 class="ui center aligned icon header">
  <i class="circular coffee blue inverted icon"></i>
  Message Me
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
        <div class="content">
          <div class="ui feed" id="message-container">
            <%= render @messages %>
          </div>
        </div>
      <div class="extra content">
        <%= form_for(@message, html: { class: 'ui reply form', role: 'form' }, 
          url: messages_path, remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body, placeholder: 'enter a message...' %>
              <%= f.button '<i class="bordered blue edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <% @users.each do |user| %>
            <%= link_to user.username, '#', 
              class: "item #{'active blue' if user == current_user}" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

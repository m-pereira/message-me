<div class="ui small blue inverted menu">
  <div class="ui container">
    <%= link_to 'Chatroom', root_path, class: 'item' %>
    <div class="right menu">
      <div class="ui dropdown item">
        Account <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to 'Log out', session_path(current_user), method: :delete, class: 'item' %>
            <%= link_to 'Edit your account', edit_user_path(current_user), class: 'item' %>
          <% else %>
            <%= link_to 'Log in', login_path, class: 'item' %>
          <% end %>
        </div>
      </div>
      <% unless logged_in? %>
        <div class="item">
          <%= link_to 'Sign up', signup_path, class: 'ui violet button' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

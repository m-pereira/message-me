<h1 class="ui center aligned header">Welcome to message me!</h1>

<h2 class="ui center aligned medium icon header">
  <i class="circular power off blue inverted icon"></i>
  Log in to continue.
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, url: sessions_path, class: 'ui form') do |f| %>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: 'Username', focus: true %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: 'Passoword' %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit 'Login', class: 'ui violet submit button' %>
      </div>
    <% end %>
    <div class="middle aligned column">
      <%= link_to 'Sign up', signup_path, class: 'links ui big violet button' %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>

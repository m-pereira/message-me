<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.text_field :username, placeholder: 'username', focus: true %>
  <%= f.password_field :password, placeholder: 'password' %>
  <%= f.submit(@user.new_record? ? 'Sign up' : 'Update account') %>
<% end %>
